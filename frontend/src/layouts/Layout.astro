---
import '../styles/global.css';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Producción Científica - Carrera Educación UNESUM 2025</title>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        
        <!-- Open Graph / Facebook / WhatsApp -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.site} />
        <meta property="og:title" content="Producción Científica - Carrera Educación UNESUM" />
        <meta property="og:description" content="Dashboard interactivo de artículos, libros y capítulos. Visualiza el impacto científico de nuestra carrera." />
        <meta property="og:image" content={new URL('social-preview.png', Astro.site)} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={Astro.site} />
        <meta property="twitter:title" content="Producción Científica - Carrera Educación UNESUM" />
        <meta property="twitter:description" content="Dashboard interactivo de artículos, libros y capítulos. Visualiza el impacto científico de nuestra carrera." />
        <meta property="twitter:image" content={new URL('social-preview.png', Astro.site)} />
        
        <meta name="theme-color" content="#003627" />
	</head>
	<body class="bg-gray-50 min-h-screen">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
